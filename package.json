{
    "name": "afeh-pwa-root",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "start:backend": "cd backend && venv\\Scripts\\python -m uvicorn server:app --reload --port 8000",
        "start:frontend": "cd frontend && npm start",
        "setup": "npm install && cd frontend && npm install && cd ../backend && python -m venv venv && venv\\Scripts\\python -m pip install -r requirements.txt"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}